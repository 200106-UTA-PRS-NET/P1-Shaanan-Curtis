@{
    ViewData["Title"] = "Order Confirmation";
}
<!-- Display the countdown timer in an element -->

<h1>YOUR ORDER HAS BEEN CONFIRMED</h1>
<span id="hide-when-ready" style="font-weight:bolder;">It will be ready in </span>
<span id="countdown" style="font-weight:bolder;"></span> 
<script>
    // Sets time counting down to (essentially +20 minutes)
    var d = new Date();
    var countDownTime = new Date(d.getTime() + 0.25*60000); //should currently be set to 15s for demo

    // Updates count down every second
    var x = setInterval(function () {

        // Get today's date and time
        var now = new Date().getTime();

        // Distance between now and count down time
        var distance = countDownTime - now;

        // Calculate time for minutes and seconds
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Display result in id="countdown"
        document.getElementById("countdown").innerHTML = minutes + ":" + seconds + "!";

        // If count down finished, hide original message and display new message
        if (distance < 0) {
            clearInterval(x);
            document.getElementById("hide-when-ready").style.visibility = "hidden";
            document.getElementById("countdown").innerHTML = "Your Order Is Ready For Pickup!";
        }
    }, 1000);
</script>