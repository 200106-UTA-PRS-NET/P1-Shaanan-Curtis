@model Assets
@{ 
    ViewData["Title"] = "Sign In";
}

<h1>Sign In</h1>
<hr/>
@if (ViewBag.Auth_Failure == true)
{
    <p style="color:red;">Username/password authentication failed.</p>
}
<form asp-controller="User" asp-action="ValidateSignin" method="post">
    Username:
    @Html.TextBoxFor(u=>u.user.Username, new {placeholder="Enter Username", required="required" })
    <br/><br/>
    Password:
    @Html.PasswordFor(u=>u.user.Pass, new {placeholder="Enter Password", required="required"})
    <br/><br/>
    <input type="submit" />
</form>